<Window x:Class="EX01_Pokemon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EX01_Pokemon"
        xmlns:view="clr-namespace:EX01_Pokemon.View"
        xmlns:vm="clr-namespace:EX01_Pokemon.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="#333">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Frame NavigationUIVisibility="Hidden" Content="{Binding CurrentPage}"/>
        <Button VerticalAlignment="Bottom"
                Command="{Binding SwitchPageCommand}"
                Content="{Binding CommandText}"/>
    </Grid>
</Window>
